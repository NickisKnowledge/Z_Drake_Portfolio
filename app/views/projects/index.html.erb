<% @projects.each do |project| %>
    <div class='row'>
      <div class='col-sm'>
        <%= link_to image_tag(project.image, alt: project.title, size: '350x350'),
        project_path(project) %>
      </div>
      <div class='col-sm'>
        <h1 class='index_title'><%= project.title %></h1>
        <%= render 'project_language', project: project %>
      </div>
    </div>
    <hr class='index_divider'/>
<% end %>
